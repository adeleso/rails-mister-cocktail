<div class="cards">
<% @cocktails.each do |thing| %>
  <div class="card-category " style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://assets.afcdn.com/recipe/20180705/80346_w1024h768c1cx1727cy777cxt0cyt0cxb3883cyb2588.jpg)">
    <%= link_to thing.name.capitalize, cocktail_path(thing), class: "text-white" %>
  </div>
<% end %>
</div>

<div class="d-flex justify-content-center my-4">
<%= link_to 'Create a new Cocktail', new_cocktail_path, class: "text-white btn btn-info btn-lg" %>
 </div>
